@model List<Author>
<style>
    .title {
        margin-bottom: 30px;
    }

    .table-responsive {
        overflow-x: auto;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f8f9fa;
    }

    .custom-row {
        width: 260%; 
    }
</style>
<h2 class="title">Yazarlar</h2>


<div class="table-responsive">
    <table class="table table-hover table-striped  align-middle">
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="custom-row" >
                    <td><a asp-controller="Article" asp-action="AuthorArticles" asp-route-id="@item.Id">@item.Name</a>(@item.ArticleNumber)</td>
                    <td class=" text-end">
                        <a asp-action="Update" asp-controller="Author" asp-route-id="@item.Id" class="btn btn-warning">Güncelle</a>
                        <a asp-action="Delete" asp-controller="Author" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('Silme işlemine onay veriyor musunuz ?'">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>